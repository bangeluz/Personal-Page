color1 = #89602D
color2 = #274E77

@import 'var/mixin'
@import 'var/header'
@import 'var/slide'
@import 'var/footer'

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  background-color: #111
  font-family: 'Khand', serif
  display: flex
  flex-flow: row wrap
  margin: auto
  color: #eee
  overflow-x: hidden

h2
  color: #89602D
  text-transform: uppercase

figure
  text-align: center
  position: relative

.img-slides
  position: relative
    h3
      position: absolute
      z-index: 1
      width: 100%
      height: 100%
      display: flex
      align-items: center
      justify-content: center
      text-transform: uppercase
      font-size: 6vh
      text-align: center
      font-family: 'Open Sans Condensed'

section
  display: flex
  flex-wrap: nowrap
  align-items: center
  padding: 2em 0
  justify-content: center
  width: 100%

.maximo-h
    max-height: 650px

section.color2 article.art-txt
    margin-right: -10em

article figure
  width: 30em
    img
      width: 60em

article p
  font-family: 'Open Sans Condensed'

article, .ico-txt
  >a
    text-decoration: none
    border: 2px solid #C1C1C1
    padding: 2px 10%
    text-transform: uppercase
    color: #C1C1C1
    line-height: 3em
    transition: .3s
      &:hover
        color: #274E77
        border-color: #274E77

.art-txt
  width: 37em
  padding: 0px 1em
  margin-top: -9em

.img-2
  position: relative
  right: 100%
  transition: all .2s ease-out

.reverse
  flex-direction: row-reverse
  padding: 15px 0px

.color2
  background-color: #191919

.iconos
  flex-flow: wrap
  justify-content: center
  align-items: flex-start

.ico-txt
  padding: 2rem 4rem
  width: 20em
  display: inline-block
  text-align: center
    span
      font-size: 12em
      transition: .3s
    p
      font-family: 'Open Sans Condensed'
      font-size: .9rem
      margin-top: 1em
    &:hover
          span
            color: #89602D

.trans-1, .trans-3
  opacity: 0
  transition: all .2s ease-out
  left: 200px
  position: relative

.trans-4
  position: absolute
  left: 10%
  top: 32%
  width: auto

.trans-5
  transition: all .2s ease-out

.desatura
  filter: (grayscale(70%))

.marg-ri
  left: 10em
  position: relative

.hidden
  opacity: 1
  left: 0

.trans-2
  opacity: 0
  transition: all .2s ease-out
  position: absolute
  top: 0%

.hidden-2
  opacity: 1
  width: auto
  right: 45px
  top: 0
  transition: all .2s ease-out

.main
  width: 90%
  max-width: 1000px
  display: flex
